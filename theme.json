{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "layout": {
            "contentSize": "1183px",
            "wideSize": "1183px"
        },
        "color": {
            "palette": [
                {
                    "slug": "theme-black",
                    "color": "#131313",
                    "name": "Black"
                },
                {
                    "slug": "theme-gray",
                    "color": "#8b8b8b",
                    "name": "Gray"
                },
                {
                    "slug": "theme-white",
                    "color": "#f7f7f7",
                    "name": "White"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Inter', sans-serif",
                    "slug": "inter",
                    "name": "Body - Inter",
                    "fontFace": [
                        {
                            "fontFamily": "'Inter', sans-serif",
                            "fontWeight": "300",                    
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/inter/Inter-Light.ttf"]
                        },
                        {
                            "fontFamily": "'Inter', sans-serif",
                            "fontWeight": "400",                    
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/inter/Inter-Regi;ar.ttf"]                    
                        }
                    ]
                },
                {
                    "fontFamily": "Stolzl, 'Roboto', sans-serif",
                    "slug": "stolzl",
                    "name": "Headings - Stolzl"                
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.64rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "0.8rem",
                    "name": "Medium"
                },
                {
                    "slug": "regular",
                    "size": "1rem",
                    "name": "Regular"
                }                                
            ]  
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "units": [ "px", "em", "rem", "vh", "vw", "%" ]
        },
        "border": {
            "radius": true,
            "color": true,
            "style": true,
            "width": true
        },
        "custom": {
            "typography": {
                "font-size": {
                    "heading-1": "clamp(2.113rem, 1.9252rem + 0.9390000000000001vw, 3.052rem)"
                }
            },
            "line-height":{
                "tiny"  : 1.14,
                "small" : 1.3,
                "medium": 1.4,
                "normal": 1.5
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--theme-black)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "lineHeight": "1.75",
            "fontSize": "1rem"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--stolzl)",
                    "fontWeight": "800",
                    "lineHeight": "var(--wp--custom--line-height-small)",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-1)"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--stolzl)",
                    "fontWeight": "800",
                    "lineHeight": "var(--wp--custom--line-height-small)"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--stolzl)",
                    "fontWeight": "800",
                    "lineHeight": "var(--wp--custom--line-height-small)"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--stolzl)",
                    "fontWeight": "800",
                    "lineHeight": "var(--wp--custom--line-height-small)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--stolzl)",
                    "fontWeight": "800",
                    "lineHeight": "var(--wp--custom--line-height-small)"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--stolzl)",
                    "fontWeight": "800",
                    "lineHeight": "var(--wp--custom--line-height-small)"
                }
            }                                                           
        },
        "blocks": {
            "core/button": {
                "border": {
                    "color": "currentColor",
                    "radius": "0"
                },
                "color": {
                    "background": "var(--wp--preset--color--theme-black)",
                    "text": "var(--wp--preset--color--theme-white)"
                },
                "spacing": {
                    "padding": {
                        "top": "0.7em",
                        "right": "1.6em",
                        "bottom": "0.7em",
                        "left": "1.6em"
                    }
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size-regular)",
                    "fontWeight": "800"
                }
            }
        }
    }
}